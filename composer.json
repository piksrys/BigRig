{
  "name": "wprig/wprig",
  "description": "A progressive theme development rig for WordPress based on WP Rig 2.0.",
  "type": "wordpress-theme",
  "license": "GPL-3.0-or-later",
  "require-dev": {
    "php": ">=7.0",
    "phpunit/phpunit": "^6",
    "brain/monkey": "^2"
  },
  "config": {
    "platform": {
      "php": "7.0"
    }
  },
  "autoload": {
    "psr-4": {
      "WP_Rig\\WP_Rig\\": "inc"
    }
  },
  "scripts": {
    "phpunit-dev": "\"vendor/bin/phpunit\"",
    "phpunit-integration-dev": "\"vendor/bin/phpunit\" -c \"phpunit.integration.xml.dist\""
  }
}
